<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


<changeSet id="202403212011001" author="aleksandrtrubino">
    <createTable tableName="buyers">
        <column name="user_id" type="bigint">
            <constraints primaryKey="true" nullable="false" unique="true"/>
        </column>
        <column name="address_id" type="bigint">
            <constraints nullable="false" unique="true"/>
        </column>
    </createTable>
</changeSet>

<changeSet id="202403212011002" author="aleksandrtrubino">
    <addForeignKeyConstraint
            baseTableName="buyers"
            baseColumnNames="address_id"
            constraintName="fk_buyers_address_id"
            referencedTableName="addresses"
            referencedColumnNames="address_id"
            onUpdate="RESTRICT"/>
</changeSet>

<changeSet id="202403212011003" author="aleksandrtrubino">
    <addForeignKeyConstraint
            baseTableName="buyers"
            baseColumnNames="user_id"
            constraintName="fk_buyers_user_id"
            referencedTableName="users"
            referencedColumnNames="user_id"
            onDelete="CASCADE"
            onUpdate="RESTRICT"/>
</changeSet>

</databaseChangeLog>
