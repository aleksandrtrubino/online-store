<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="202403202214001" author="Karavaev2024">
        <createTable tableName="addresses">
            <column name="address_id" type="bigint">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="city_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="street_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="house_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="address_type_id" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="202403202214002" author="Karavaev2024">
        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="city_id"
                constraintName="fk_addresses_city_id"
                referencedTableName="cities"
                referencedColumnNames="city_id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="202403202214003" author="Karavaev2024">
        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="street_id"
                constraintName="fk_addresses_street_id"
                referencedTableName="streets"
                referencedColumnNames="street_id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="202403202214004" author="Karavaev2024">
        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="house_id"
                constraintName="fk_addresses_house_id"
                referencedTableName="houses"
                referencedColumnNames="house_id"
                onDelete="CASCADE"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="202403202214005" author="Karavaev2024">
        <addForeignKeyConstraint
                baseTableName="addresses"
                baseColumnNames="address_type_id"
                constraintName="fk_addresses_address_type_id"
                referencedTableName="address_types"
                referencedColumnNames="address_type_id"
                onDelete="NO ACTION"
                onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="202403202214006" author="Karavaev2024">
        <createSequence sequenceName="addresses_seq" startValue="1050" incrementBy="50"/>
    </changeSet>

</databaseChangeLog>