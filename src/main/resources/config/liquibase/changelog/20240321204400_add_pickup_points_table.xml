<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="202403212044001" author="Karavaev2024">
        <createTable tableName="pickup_points">
            <column name="pickup_point_id" type="bigint">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="address_id" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="202403212044002" author="Karavaev2024">
        <addForeignKeyConstraint
                baseTableName="pickup_points"
                baseColumnNames="address_id"
                constraintName="fk_pickup_points_address_id"
                referencedTableName="addresses"
                referencedColumnNames="address_id"
                onDelete="CASCADE"
                />
    </changeSet>

    <changeSet id="202403212044003" author="Karavaev2024">
        <createSequence sequenceName="pickup_points_seq" startValue="1050" incrementBy="50"/>
    </changeSet>
</databaseChangeLog>